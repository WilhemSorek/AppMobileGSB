<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="GSB"
             x:Class="AppMobileGSB.PageAjout">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Saisie d'un échantillon :" />
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Entry Grid.Row="0" x:Name="Entrycode" Placeholder="Saisir ici un code"/>
                <Entry Grid.Row="1" x:Name="Entrylibelle" Placeholder="Saisir ici un libellé"/>
                <Entry Grid.Row="2" x:Name="Entrystock" Placeholder="Saisir ici un stock"/>
            </Grid>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Button Grid.Column="0" Text="Ajouter" x:Name="btnAjout" Clicked="btnAjout_Clicked"/>
                <Button Grid.Column="1" Text="Quitter" x:Name="btnQuitter" Clicked="btnQuitter_Clicked"/>
            </Grid>
            <Label x:Name="textviewMessage"  IsVisible="false" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>